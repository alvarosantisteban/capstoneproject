<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/market_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.alvarosantisteban.berlinmarketfinder.MarketDetailFragment" >
    <TextView
        android:id="@+id/market_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textIsSelectable="true"
        tools:text="Neukoller"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/market_opening_days"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:textIsSelectable="true"
            tools:text="Sa - Do"/>
        <TextView
            android:id="@+id/market_opening_hours"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:textIsSelectable="true"
            tools:text="09:00 - 18:00"/>
    </LinearLayout>
    <TextView
        android:id="@+id/market_other_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textIsSelectable="true"
        tools:text="The other info bla bla bla"/>
    <TextView
        android:id="@+id/market_contact_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textIsSelectable="true"
        tools:text="Contact info"/>
    <com.google.android.gms.maps.MapView
        android:id="@+id/market_mapView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_mapview_height" />
</LinearLayout>