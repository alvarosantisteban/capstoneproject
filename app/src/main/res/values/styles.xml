<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="tagText">
        <item name="android:paddingRight">@dimen/standard_margin</item>
        <item name="android:paddingLeft">@dimen/standard_margin</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textDetail">
        <item name="android:paddingRight">@dimen/standard_margin</item>
        <item name="android:paddingLeft">@dimen/standard_margin</item>
        <item name="android:paddingBottom">@dimen/standard_margin</item>
        <item name="android:paddingTop">@dimen/small_margin</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="rvItemOpeningInfo">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="widgetOpeningInfo">
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/widget_opening_text</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingTop">@dimen/widget_margin</item>
    </style>
</resources>
